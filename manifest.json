{
  "name": "Price Tracker",
  "version": "0.0.1",
  "description": "can Inject JavaScript code on every web page ",

  "manifest_version": 3,

  "icons": {
    "120": "./icons/icon-120x120.png"
  },

  "host_permissions": ["https://*.flipkart.com/*", "https://*.amazon.in/*"],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Price Tracker"
  },
  "browser_action": {
    "popup": "popup.html"
  },
  "permissions": ["tabs", "activeTab", "scripting"],

  "content_scripts": [
    {
      "matches": ["https://*.flipkart.com/*", "https://*.amazon.in/*"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["https://*.flipkart.com/*", "https://*.amazon.in/*"]
    }
  ]
}
