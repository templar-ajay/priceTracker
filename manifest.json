{
  "name": "Price Tracker",
  "version": "0.0.1",
  "description": "can Inject JavaScript code on every web page ",

  "manifest_version": 3,

  "icons": {
    "120": "./icons/icon-120x120.png"
  },

  "host_permissions": ["https://*.flipkart.com/*", "https://*.amazon.in/*"],
  "permissions": ["activeTabs","scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  
  "content_scripts": [{
    "matches": ["https://*.flipkart.com/*", "https://*.amazon.in/*"],
    "css":["contentScript.css"],
    "js": ["contentScript.js"]
    }]

}